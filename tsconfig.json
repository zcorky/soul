{
    "compilerOptions": {
        "moduleResolution": "node",
        "module": "commonjs",
        "target": "es5",
        "strictNullChecks": true,
        "noImplicitThis": false,
        "noUnusedLocals": true,
        "noImplicitAny": false,
        "outDir": "lib",
        "lib": ["dom", "es2015"],
        "declaration": true,
        "sourceMap": false,
        "removeComments": true,
        "baseUrl": "./",
        "paths": {
            "@/*": ["src/*"],
            "LIB/*": ["src/*"]
        }
    },
    "include": ["src/**/*.ts"]
}